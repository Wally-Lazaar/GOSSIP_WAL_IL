<h2 class="mb-3">Créez un gossip !</h2>

<%= form_tag url_for(action: 'create'), method: "post" do %>

  <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >

  <div class="form-group">
    <%= label_tag 'Titre' %>
    <%= text_field_tag 'title', @gossip.title, class: 'form-control', autofocus: true%>
    <small id="titleHelp" class="form-text text-muted">Entre 3 et 14 caractères.</small>
  </div>

  <div class="form-group">
      <%= label_tag 'Contenu' %>
      <%= text_area_tag 'content', @gossip.content, class: 'form-control', rows: 5 %>
  </div>

  <%= submit_tag "Publier" , class: "btn btn-primary"%>

<% end %>

