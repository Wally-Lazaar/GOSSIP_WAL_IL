<h2 class="mb-3">Editez le gossip !</h2>

<div class="card mb-3">
  <div class="card-body">
  
    <h6 class="card-subtitle mb-2">
      <a href="<%=user_path(id: @gossip.user)%>">
      <%= @gossip.user.first_name %> 
      </a>
      de
      <a href="<%=city_path(id: @gossip.user.city_id)%>">
        <%= @gossip.user.city.name %>
      </a>
    </h6>


    <%= form_tag url_for(action: 'update'), method: "put" do %>

        <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >

        <div class="form-group">
            <%= label_tag 'Titre' %>
            <%= text_field_tag 'title', @gossip.title, class: 'form-control'%>
            <small id="titleHelp" class="form-text text-muted">Entre 3 et 14 caract√®res.</small>
        </div>

        <div class="form-group">
            <%= label_tag 'Contenu' %>
            <%= text_area_tag 'content', @gossip.content, class: 'form-control', rows: 5 %>
        </div>

        <%= submit_tag "Modifier le gossip" , class: "btn btn-primary"%>

    <% end %>

    
  </div>
</div>

