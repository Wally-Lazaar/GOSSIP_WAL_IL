<h6 class="card-subtitle mb-2">

    <h5>
        Gossips des utilisateurs de 
        <a href="<%=city_path(id: @city)%>">
            <%= @city.name %>
        </a>

    </h5>

    <% @gossips.each do |gossip|%>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= link_to gossip.user.first_name, user_path(id: gossip.user)%></h5>
                <h5 class="card-text">   <%= gossip.title %>   </h5>
                <p class="card-text">   <%= gossip.content %>   </p>
            </div>
        </div>

    <% end %>

</h6>